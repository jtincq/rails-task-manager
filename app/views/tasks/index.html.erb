<div class="container">
  <h1>My Tasks</h1>

  <% @tasks.each do |task| %>
  <div class="task">
    <% if task.completed %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
    <h2><%= link_to task.title, task%></h2>
  </div>
  <% end %>

</div>
