<div class="container">
  <h1>My Tasks</h1>

  <% @tasks.each do |task| %>
  <div class="task">
    <% if task.completed %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
    <h3><%= link_to task.title.capitalize, task%></h3>
    <h3> - <%= link_to "Delete", delete_path(task.id),
      method: :delete,
      data: { confirm: "Are you sure?" } %></h3>
  </div>
  <% end %>

  <p><i class="fas fa-plus"></i> <%= link_to "Add a new task", new_path%></p>

</div>
