<div class="container">
  <h1><%= @task.title.capitalize %></h1>
  <h3>Details : <%= @task.details.capitalize %></h3>
  <div class="task">
    <% if @task.completed %>
      <i class="far fa-check-square"></i>
      <h3>This task is completed</h3>
    <% else %>
      <i class="far fa-square"></i>
      <h3>This task has not been completed yet</h3>
    <% end %>
  </div>

  <p><%= link_to "Back to list", tasks_path%></p>
  <p><%= link_to "Edit task", edit_path%></p>

</div>
